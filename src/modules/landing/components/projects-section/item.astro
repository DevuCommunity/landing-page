---
const { title, content } = Astro.props;
---
<!-- tailwind cards -->
<!-- show the card over its container -->
<article class="
  bg-blue-500
  p-6
  rounded-lg
  shadow-lg
  hover:shadow-xl
  transition
  duration-300
  ease-in-out
  transform
  hover:-translate-y-1
  hover:scale-105
  hover:rotate-6
  hover:z-10
  hover:bg-indigo-200
  hover:text-indigo-900
">
  <h1 class="text-2xl font-bold">{title}</h1>
  <p>{content}</p>
</article>
