<style>
  /* Define the bounce animation */
  @keyframes bounce {
    0% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0) scale(0.7); rotate: -45deg; }
  }

  @keyframes emergeFromBottom {
    0% { transform: translateY(100px); }
    50% { transform: translateY(0); }
    100% { transform: translateY(0) scale(0.7); }
  }

  /* Apply animation to the SVG image */
  .animated-devu-monster {
    animation: bounce .5s ease-in-out; /* Adjust duration and timing function as needed */
  }

  /* media query for small devices to show the monster emerging from the bottom without rotation */
  @media (max-width: 640px) {
    .animated-devu-monster {
      scale: 0.7;
      animation: emergeFromBottom .5s ease-in-out; /* Adjust duration and timing function as needed */
    }
  }

  @keyframes twinkling-stars {
    from {
      transform: translateY(-100%);
    }
    to {
      transform: translateY(100%);
    }
  }

  .bg {
    position: absolute;
    top: 0;
    left: 10px;
    width: 100vw;
    height: 100vh;
  }

  @keyframes blink {
    0%   { opacity: 0; }
    50% { opacity: 1; }
    100% { opacity: 0; }
  }

  .stars-bg__star {
    opacity: 0;
    animation: blink 3s infinite;
  }
  .stars-bg__blink-2 {
    animation-delay: 1s;
  }
  .stars-bg__blink-3 {
    animation-delay: 2s;
  }
</style>

