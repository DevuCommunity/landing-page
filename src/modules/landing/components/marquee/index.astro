---
const { event } = Astro.props;
const marqueeLabel = event?.marqueeLabel || 'PrÃ³ximo evento';

const marqueeItems = Array.from({ length: 10 }, () => marqueeLabel);
---
<style>
:root {
  background-color: #141414;
}

.fadeout-horizontal {
  mask-image: linear-gradient(
    to right,
    transparent,
    black 5rem,
    black calc(100% - 5rem),
    transparent
  );
}

.center-content {
  display: flex;
  align-items: center;
}

.wrapper {
  background-color: #000;
  width: 100%;
  color: var(--yellow-duck);
  font-size: 1.5rem;
  padding: 1rem;
  font-family: monospace;
}

.marquee-text {
  overflow: clip;
}

.marquee-text-track {
  display: flex;
  gap: 2rem;
  width: max-content;
  animation: marquee-move-text var(--speed, 60s) linear infinite var(--direction, forwards);
}

.marquee-text p {
}

@keyframes marquee-move-text {
  to {
    transform: translateX(-50%);
  }
}

</style>
<div>
{
  !event
  ? <div></div>
  : (
    <a href="#events" class="nav-link">
      <div class="center-content">
        <div class="wrapper">
          <div class="marquee-text fadeout-horizontal">
            <div class="marquee-text-track">
              {marqueeItems.map((label) => <p>{label}</p>)}
              {marqueeItems.map((label) => <p aria-hidden="true">{label}</p>)}
            </div>
          </div>
        </div>
      </div>
    </a>
  )
}
</div>
