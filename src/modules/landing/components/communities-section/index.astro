---
import Item from "./item.astro";
const allies = [
  { name: 'GDG Orizaba', logo: 'https://devu-landing-statics.s3.us-east-1.amazonaws.com/allies/gdg-orizaba.png' },
  { name: 'Github Campus Experts', logo: 'https://devu-landing-statics.s3.us-east-1.amazonaws.com/allies/gh-campus-experts.webp' },
  { name: 'GDG Xalapa', logo: 'https://devu-landing-statics.s3.us-east-1.amazonaws.com/allies/gdg-xalapa.jpg' },
];
---
<style>
  #container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.item {
  flex: 0 0 calc(16.66% - 20px);
  color: white;
  padding: 20px;
  margin: 10px;
}
</style>

<div id="container">
  {allies.map(partner => (
    <div class="item">
      <Item {...partner} />
    </div>
  ))}
</div>
