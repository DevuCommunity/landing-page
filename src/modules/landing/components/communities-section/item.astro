---
const { name, logo } = Astro.props;
import { Image } from 'astro:assets';
import Title from "../title/index.astro";
---
<style>
.item {
  border-radius: 6px;
  flex: 0 0 calc(16.66% - 20px);
  color: white;
  padding: 10px;
  margin: 10px;
  background-image: linear-gradient(135deg, rgba(255,255,255, .1) 0%, rgba(255,255,255, .4) 100%);
  display: flex;
  justify-content: center;
  align-items: center;
}
</style>
<!-- tailwind cards -->
<!-- show the card over its container -->
<div class="item">
  <div
    style="
      color: #ffffff;
      min-width: 300px;
    "
    class="
      transition
      duration-300
      ease-in-out
      transform
      hover:scale-105
      hover:z-10
    "
  >
    <div class="flex flex-col items-center justify-center gap-4">
        <Image
          decoding="async"
          loading="eager"
          alt={`${name} logo`}
          class="w-32 h-32"
          src={logo}
          height={32}
          width={32}
        />
        <h2
        class="
          devu-section-title
          Fredoka
          pb-8
          text-3xl
          text-white
          text-center
        ">{name}</h2>
    </div>
  </div>
</div>
